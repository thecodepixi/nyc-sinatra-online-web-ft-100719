<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>/edit">
<input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="landmark[name]">Name:</label>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"/></p>
  <p><label for="landmark[year_completed]">Year Completed:</label>
  <input type="number" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>" /></p>

  <p><button type="submit">Edit Landmark</button></p>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
