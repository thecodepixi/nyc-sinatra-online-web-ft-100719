<h2>New Figure Form:</h2>
<form method="POST" action="/figures/<%= @figure.id %>/edit">
<input id="hidden" type="hidden" name="_method" value="patch">
  <p>
  <label for="figure[name]">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  </p>
  <p><strong>Titles:</strong></p>
  <% @titles.each do |title| %>
    <p>
    <label for="figure[title]"><%= title.name %></label>
    <input 
    type="checkbox" 
    value="<%=title.id%>" 
    name="figure[title_ids][]" 
    id="title_<%= title.id %>"
    <% if @figure.titles.include?(title) %>
    checked="true"
    <% end %>
    >
    </p>
  <% end %>
  <p>
  <p><strong><label for="title[name]">Create New Title:</label></strong></p>
  <input type="text" name="title[name]" id="new_title">
  </p>
  <p><strong>Landmarks:</strong></p>
  <% @landmarks.each do |landmark| %>
    <p>
    <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
    <input 
    type="checkbox" 
    value="<%= landmark.id %>" 
    name="figure[landmark_ids][]" 
    id="landmark_<%= landmark.id %>"
    <% if @figure.landmarks.include?(landmark) %>
    checked="true"
    <% end %>
    >
    </p>
  <% end %>
  <p>
  <p><strong>Create New Landmark:</strong></p>
  <label for="landmark[name]">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark[year_completed]">Year:</label>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year">
  </p>

  <p>
  <button type="submit">Edit Figure</button>
  </p>
</form>